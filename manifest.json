{
    "manifest_version": 3,
    "name": "YouTube Auto PiP",
    "description": "Automatically enables Picture-in-Picture mode for YouTube videos when switching tabs.",
    "version": "1.1",
    "permissions": [
      "tabs",
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  